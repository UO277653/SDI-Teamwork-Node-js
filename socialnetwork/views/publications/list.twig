{% extends "layout.twig" %}
{% block title %} My publications {% endblock %}
{% block main_container %}
    <h2>Publications for {{ author }}</h2>
    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
            <tr>
                <th>Title</th>
                <th>Text</th>
                <th class="col-md-1"></th>
            </tr>
            </thead>
            <tbody>
            {% for publication in publications %}
                <tr>
                    <td>{{ publication.title }}</td>
                    <td>{{ publication.text }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <!-- Pagination -->
    <div class="row text-center">
        <ul class="pagination">
            {% for page in pages %}
                <li class="page-item active">
                    <a class="page-link" href="/publications/list/{{ author }}/?page={{ page }}">{{ page }}</a>
                </li>
            {% endfor %}
            <script>
                $("#pi-" + "{{ currentPage }}").addClass("active");
            </script>
        </ul>
    </div>

{% endblock %}