{% extends "layout.twig" %}
{% block title %} Users – Social Network {% endblock %}
{% block main_container %}
    <!-- Búsqueda -->
    <div class="row">
        <div id="custom-search-input ">
            <form method="get" action="/users">
                <div class="input-group col-xs-8 col-sm-6 col-md-4 col-lg-5 pull-right">
                    <input id="search" type="text" class="search-query form-control"
                           placeholder="Search user" name="search"/>
                    <span class="input-group-btn">
                        <button class="btn" type="submit" id="searchButton">
                         <span class="glyphicon glyphicon-search"></span>
                        </button>
                    </span>
                </div>
            </form>
        </div>
    </div>
    <h2>Users</h2>
    <div class="table-responsive">
        <table class="table table-hover" id="tableUsers">
            <thead>
            <tr>
                <th scope="col">Email</th>
                <th scope="col">Name</th>
                <th scope="col">Surname</th>
                <th scope="col">Friends</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.email }}</td>
                    <td>{{ user.name }}</td>
                    <td>{{ user.surname }}</td>
                    <td>
                        {% if isFriend %}
                            <p>Amigos</p>
                        {% else %}
                            <form class="form-horizontal" method="post" action="/friends/request/{{ user._id }}" >
                                <div class="form-group">
                                    <div class="col-sm-offset-2 col-sm-10">
                                        <button type="submit" class="btn btn-primary" id="addFriendBtn">+ Add Friend</button>
                                    </div>
                                </div>
                            </form>
                            <!--
                <a class="btn btn-primary pull-right" href="/friends/request/{{ user._id }}">Send Request</a>
                -->
                        {% endif %}
                    </td>

                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <!-- Paginación mostrar la actual y 2 anteriores y dos siguientes -->
    <div class="row text-center">
        <ul class="pagination">
            {% for page in pages %}
                <li class="page-item" id="id-{{ page }}">
                    <a class="page-link" href="/users/?page={{ page }}">{{ page }}</a>
                </li>
            {% endfor %}
            <script>
                $("#pi-"+"{{ currentPage }}").addClass("active");
            </script>
        </ul>
    </div>
{% endblock %}